@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid p-0 d-flex justify-content-center align-items-center" style="height: calc(100vh - 117px);">
    <div style="background: linear-gradient(to bottom right, #95BDAB, #679F7B); height: 100%;">
        <img src="../Images/Logo.png" style="width: 100%; height: 100%; object-fit: cover;" />
    </div>
    <div style="width: max-content; margin-left: auto; margin-right: auto; ">
        <h1 class="display-4 text-center">Login</h1>
        <form method="post">
            <div class="form-group" style="display: flex; justify-content: space-between; margin-bottom: 10px">
                <label asp-for="@Model.Username" for="text" style="margin-right: 15px;">Username :</label>
                <input asp-for="@Model.Username" type="text" class="form-control" id="username" name="username" placeholder="Username" required style="flex: 1; max-width: 200px;">
            </div>
            <div class="form-group" style="display: flex; align-items: center;">
                <label asp-for="@Model.Password" for="password" style="margin-right: 24px;">Password:</label>
                <input asp-for="@Model.Password" type="password" class="form-control" id="password" name="password" placeholder="Password" required style="flex: 1; max-width: 200px;">
            </div>
            <span class="text-danger">@ViewData["ErrorMessage"]</span>
            <br />
            <div style="margin-top: 10px; vertical-align: central; display: flex; justify-content: space-around;">
                <button type="submit" class="addButton">Login</button>
            </div>
        </form>
    </div>
</div>