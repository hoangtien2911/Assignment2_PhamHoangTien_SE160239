@page
@model EmployeeManagementRazorPage.Pages.AdminPage.JobPageModel
@{
}
<div style="border-radius: 10px; background-color: #EFF2F7; padding: 0 0 0 0;">
    <div style="display: flex; min-height: calc(100vh - 117px);">
        <partial name="_LeftMenu" />
        <!-- Main Section -->
        <div style="flex: 1; padding: 20px 0 0 0;">
            <div style="margin-top: 20px;">
                <form method="get">
                    <button asp-page="/AdminPage/AddUpdateJobPage" class="addButton">
                        <i class="fas fa-plus" style="vertical-align: middle; margin-right: 8px;"></i> Add New Job
                    </button>
                </form>
                <table class="dataGrid">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Job Title</th>
                            <th>Salary</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Jobs.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.Raw(i + 1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Jobs[i].JobTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Jobs[i].Salary)
                                </td>
                                <td>
                                    <div class="me-3">
                                        <a asp-page="./AddUpdateJobPage" asp-route-jobId="@Model.Jobs[i].JobId" asp-route-isUpdate="1" title="Update Job">
                                            <i class="fas fa-edit" style="color:#212529;"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>    