<div style="width: 200px; height: calc(100vh - 117px); background-color: #679F7B; border-radius: 0 50px 0 0; padding: 20px; margin-right: 20px;">
    <div style="width: 80px; height: 80px; background-color: gray; border-radius: 100px; margin-left: 20px;">
        <img src="../Images/Logo.png" style="width: 100%; height: 100%; object-fit: cover;" />
    </div>
    <div style="text-align: center; margin-top: 10px;">
        <span style="color: white; font-size: 18px; font-weight: bold;">Employee</span><br />
        <span style="color: white; font-size: 20px; font-weight: bold;">Management</span>
    </div>
    <hr style="background-color: #447B58; margin: 25px 0;">
    <div style="text-align: center;">
        <form method="get">
            <button id="btnEmployees" asp-page="/ManagerPage/ManagerHomePage" class="menuButton @IsButtonActive("/ManagerPage/ManagerHomePage")">
                <i class="fas fa-users" style="margin-right: 5px;"></i> Employees
            </button>
            <button id="btnJob" asp-page="/ManagerPage/JobDetails" class="menuButton @IsButtonActive("/ManagerPage/JobDetails")">
                <i class="fas fa-briefcase" style="margin-right: 5px;"></i> Job
            </button>
            <button id="btnDepartment" asp-page="" class="menuButton @IsButtonActive("")">
                <i class="fas fa-building" style="margin-right: 5px;"></i> Department
            </button>
            <button id="btnMyProfile" asp-page="" class="menuButton @IsButtonActive("")">
                <i class="fas fa-user" style="margin-right: 5px;"></i> My profile
            </button>
        </form>
    </div>
    <button class="menuButton" style="margin-top: auto;">
        <i class="fas fa-sign-out-alt" style="margin-right: 5px;"></i> Logout
    </button>
</div>

@functions {
    public string IsButtonActive(string page)
    {
        if (ViewContext.RouteData.Values["Page"]?.ToString() == page)
        {
            return "active";
        }
        return "";
    }
}